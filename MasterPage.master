<%@ Master Debug="true" Language="C#" AutoEventWireup="true" CodeFile="MasterPage.master.cs" Inherits="Microsite.MasterPage" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title><%# Microsite.SiteUtils.siteId%> <%# Microsite.SiteUtils.shortKey%> <%# Microsite.SiteUtils.longKey%></title>
    <asp:ContentPlaceHolder id="head" runat="server">
    </asp:ContentPlaceHolder>
    <link href="css/styles.css" rel="stylesheet" type="text/css" media="all" />
</head>
<body>
    <form id="form1" runat="server">
    <div id="site">
    <div id="siteInner">
	    <asp:Repeater ID="repeaterXML" runat="server">
            <ItemTemplate>
                <%# 
                   Microsite.SiteUtils.SetSite(XPath("@id").ToString(), XPath("@shortkey").ToString(), XPath("@longkey").ToString()) 
                %>
                <div id="headTop">
                    <img src="images/skynet_face.jpg" alt='<%# XPath("@longkey")%> Security Systems by SkyNet' />
                    <img src="images/skynet_security_systems.png" alt="Skynet Security Systems" id="logo" />
                    <h4><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n1']").ToString())%></h4>
                </div>
                <div id="headNav">
                    <ul class="horiz">
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n2']").ToString())%></a></li>
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n3']").ToString())%></a></li>
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n4']").ToString())%></a></li>
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n5']").ToString())%></a></li>
                    </ul>
                </div>

                <div id="bodyWrap">
                    <asp:ContentPlaceHolder id="ContentPlaceHolder1" runat="server">
                    </asp:ContentPlaceHolder>
                </div>

                <div id="footWrap">
                    <ul id="footNav">
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n2']").ToString())%></a></li>
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n3']").ToString())%></a></li>
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n4']").ToString())%></a></li>
                        <li><a href="#"><%# Microsite.SiteUtils.ReplaceText(XPath("contentareas/contentarea[@id='n5']").ToString())%></a></li>
                    </ul>
                </div>
            </ItemTemplate>
        </asp:Repeater>
    </div>
    </div>
    </form>
</body>
</html>
