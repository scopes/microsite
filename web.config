<?xml version="1.0"?>
<configuration>
  <system.net>
    <mailSettings>
      <smtp from="noreply@chicagocctv.com" deliveryMethod="Network">
        <network host="smtp.gmail.com" port="587" userName="noreply@chicagocctv.com" password="skynet4"/>
      </smtp>
    </mailSettings>
  </system.net>
  <system.web>
    <trust level="Full" originUrl=""/>
    <customErrors mode="Off"/>
    <compilation debug="true" targetFramework="4.0"/>
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
  </system.web>
  <system.webServer>
    <directoryBrowse enabled="false"/>
    <defaultDocument>
      <files>
        <clear/>
        <add value="Default.htm"/>
        <add value="Default.asp"/>
        <add value="index.htm"/>
        <add value="Default.aspx"/>
        <add value="index.aspx"/>
        <add value="index.php"/>
      </files>
    </defaultDocument>
    <rewrite>
      <rules>
        <rule name="Redirect to WWW" stopProcessing="true">
          <match url=".*"/>
          <conditions>
            <add input="{HTTP_HOST}" pattern="^chicagocctv.com$"/>
          </conditions>
          <action type="Redirect" url="http://www.chicagocctv.com/{R:0}" redirectType="Permanent"/>
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>